<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/number_layout" android:layout_centerHorizontal="true"
        android:layout_width="wrap_content" android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView android:id="@+id/text_code_number_1"
                      android:layout_width="@dimen/verification_code_size" android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true" android:gravity="center"
                      android:textSize="@dimen/text_size_40sp" android:textColor="@color/colorPrimary"/>

            <TextView android:id="@+id/text_code_number_2"
                      android:layout_width="@dimen/verification_code_size" android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true" android:gravity="center"
                      android:layout_marginLeft="@dimen/margin_20dp" android:textSize="@dimen/text_size_40sp"
                      android:textColor="@color/colorPrimary"/>

            <TextView android:id="@+id/text_code_number_3"
                      android:layout_width="@dimen/verification_code_size" android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true" android:gravity="center"
                      android:layout_marginLeft="@dimen/margin_20dp" android:textSize="@dimen/text_size_40sp"
                      android:textColor="@color/colorPrimary"/>

            <TextView android:id="@+id/text_code_number_4"
                      android:layout_width="@dimen/verification_code_size" android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true" android:gravity="center"
                      android:layout_marginLeft="@dimen/margin_20dp" android:textSize="@dimen/text_size_40sp"
                      android:textColor="@color/colorPrimary"/>

        </LinearLayout>

        <EditText android:id="@+id/edit_input"
                  android:layout_width="@dimen/verification_code_edit_width" android:layout_height="@dimen/verification_code_edit_height"
                  android:layout_centerHorizontal="true"
                  android:phoneNumber="true" android:maxLength="4"
                  android:textColor="#00000000" android:background="@null"
                  android:cursorVisible="false"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_below="@id/number_layout" android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <TextView android:id="@+id/text_bar_1"
                  android:layout_width="@dimen/verification_code_size" android:layout_height="@dimen/verification_bar_height"
                  android:layout_centerHorizontal="true" android:background="@drawable/bar_no_number"/>

        <TextView android:id="@+id/text_bar_2"
                  android:layout_width="@dimen/verification_code_size" android:layout_height="@dimen/verification_bar_height"
                  android:layout_marginLeft="@dimen/margin_20dp" android:layout_centerHorizontal="true"
                  android:background="@drawable/bar_no_number"/>

        <TextView android:id="@+id/text_bar_3"
                  android:layout_width="@dimen/verification_code_size" android:layout_height="@dimen/verification_bar_height"
                  android:layout_marginLeft="@dimen/margin_20dp" android:layout_centerHorizontal="true"
                  android:background="@drawable/bar_no_number"/>

        <TextView android:id="@+id/text_bar_4"
                  android:layout_width="@dimen/verification_code_size" android:layout_height="@dimen/verification_bar_height"
                  android:layout_marginLeft="@dimen/margin_20dp" android:layout_centerHorizontal="true"
                  android:background="@drawable/bar_no_number"/>

    </LinearLayout>

</RelativeLayout>